<% provide(:title, 'Edit profile') %>
<h1>プロフィール編集</h1>
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center" >
      <% if @user.image.attached? %>
       <h3><%= current_user.user_name %></h3>
       <%= image_tag @user.display_image %>
      <% end %>
    </div>
   
      <p class="profile-text">プロフィール写真</p>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <span class="image">
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>
      <%= f.label :名前 %>
    　<%= f.text_field :name %>
      
      <%= f.label :ユーザーネーム %>
      <%= f.text_field :user_name %>
      
      <%= f.label :自己紹介 %>
      <%= f.text_field :introduction %>
      <br>
      <p>個人の情報(非公開)</p>
      <%= f.label :Eメール %>
      <%= f.email_field :email %>
      
      <%= f.submit "変更する", class: "btn btn-primary" %>
    <% end %>
    
    <% if current_user?(@user) %>
     <div class="user_delete">
     <%= link_to "ユーザーを削除する",@user, method: :delete, class: "btn btn-danger",
                                  data: { confirm: "You sure?" } %>
     </div>
    <% end %>
  </div>
</div>


